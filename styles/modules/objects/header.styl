//header
.header
  position fixed
  height 35px
  top 0
  right 0
  left 0
  padding 0 10px 0 10px
  background #fff
  // border 1px solid gray(10)
  border-bottom 1px solid darken(body_bg, 10)
  z-index 999


.header-inner
  @extend $clearfix
  position relative
  height 100%
  @media screen and (min-width: 1200px)
    max-width 1200px
    margin 0 auto


.header-logo
  float left
  width 70px
  height 35px
  background-image url('../images/logo.png')
  margin-right 10px
  @media screen and (max-width: 600px)
    position absolute
    left 0
